{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "global.d.ts",
    "main.tsx",
    "components.tsx",
    "hooks.ts",
    "types.ts",
    "gemini-live-audio.ts",
    "gemini-utils.ts",
    "debug-utils.ts",
    "translation-prompts.ts",
    "generative-art-background-webgl.tsx",
    "translation-conference-app.tsx",
    "tests/**/*",
    "__mocks__/**/*",
    "worker-with-durable-objects.js",
    "jest.setup.js"
  ]
}